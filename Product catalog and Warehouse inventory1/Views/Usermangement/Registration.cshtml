@model Product_catalog_and_Warehouse_inventory1.Models.Usermangement

@{
    ViewBag.Title = "Registration Form";
    Layout = null;
}
@if (ViewBag.Message != null)
{

    <span style="color:@Convert.ToString(  ViewBag.color)"> @ViewBag.Message</span>
}
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Registration | Registration Form</title>
    @Styles.Render("~/Content/css")

</head>

<body class="gray-bg">

    <div id="wrapper">


        <div class="row border-bottom">

        </div>
        <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-10" style="text-align:center">
                <h2>Registration Form</h2>

            </div>
            <div class="col-lg-2">

            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="container">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">

                                <form method="post" class="form-horizontal">

                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Name</label>
                                        <div class="col-sm-10">


                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Email</label>
                                        <div class="col-sm-10">
                                            @*<input type="text" class="form-control" name="Email">*@
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Mobile_Number</label>
                                        <div class="col-sm-10">
                                            @*<input type="text" class="form-control" name="MobileNumber">*@
                                            @Html.TextBoxFor(m => m.Mobilenum, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Mobilenum, "", new { @style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">
                                            Gender <br />
                                        </label>
                                        <div class="col-sm-10">
                                            <div>
                                                @Html.RadioButton("Gender", "Male")
                                                <label for="Male">Male</label>

                                            </div>
                                            <div>
                                                @Html.RadioButton("Gender", "Female")
                                                <label for="Female">Female</label>

                                            </div>
                                            @Html.ValidationMessageFor(m => m.Gender, "", new { @style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label" name="city_Id">City</label>
                                        <div class="col-sm-10">
                                            @Html.DropDownListFor(m => m.Cityid, new SelectList(Model.Cities, "Value", "Text"), "Select", new { @class = "form-control m-b" })
                                            @Html.ValidationMessageFor(m => m.Cityid, "", new { @style = "color:red" })

                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Password</label>
                                        <div class="col-lg-10">
                                            @*<input type="password" class="form-control" name="Password">*@
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <label class="col-lg-2 control-label">Confirm Password</label>
                                        <div class="col-lg-10">
                                            @*<input type="password" class="form-control" name="ConfirmPassword">*@
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @style = "color:red" })
                                        </div>
                                    </div>

                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="col-sm-4 col-sm-offset-2">
                                            <button class="btn btn-primary" type="submit">Submit</button>
                                        </div>

                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group">
                                        <div class="col-sm-4 col-sm-offset-2">
                                            <a class="btn btn-primary" href="https://localhost:44333/Usermangement/Login">Login</a>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="footer">

                <div>
                    <strong></strong> Product Catalog and Warehouse Inventory &copy; 2023-2024
                </div>
            </div>
        </div>

        <div>

        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")

</body>

</html>
