@model Product_catalog_and_Warehouse_inventory1.Models.Usermangement

@{
    ViewBag.title = "Userlist";
}

@if (TempData["Message"] != null)
{
    <span style="color:green"> @TempData["Message"]</span>
}
<div class="col-lg-12">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example">
                <thead>
                    <tr>
                        <th>Serial No.</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobilenum</th>
                        <th>Gender</th>
                        <th>CityName</th>
                        <th style="width:100px">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Validationmodellist)
                    {
                        <tr>
                            <td>
                                @item.SerialNo
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Mobilenum
                            </td>
                            <td>
                                @item.Gender
                            </td>
                            <td>
                                @item.City
                            </td>
                            <td>
                                <button class="btn btn-success btn-xs" style="margin-bottom:1px;width:58px"
                                        onclick="location.href='@Url.Action("EditUserData","Usermangement", new { Registration_ID = item.Registration_ID })'">
                                    Edit
                                </button>

                                <a href='@Url.Action("DeleteUserData","Usermangement", new { Registration_ID = item.Registration_ID })'
                                   class="btn btn-danger btn-xs" style="margin-top:1px;width:58px"
                                   onclick="return confirm('Are you Sure You want to delete this Record?');">
                                    Delete
                                </a>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Page-Level Scripts -->

@section scripts{

    <script>
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                lengthMenu: [5, 10, 15],
                pageLength: 5,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [

                    //{
                    //    extend: 'csv'
                    //},

                    {
                        extend: 'csv', title: 'Userlist',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        },
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });
    </script>
}

