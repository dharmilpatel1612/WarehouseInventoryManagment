@model Product_CatalogAndWarehouse_Inventory.Models.ProductCatalogueModel

@{
    ViewBag.Title = "Product List";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <form method="post" id="myForm" class="form-horizontal">
        <div class="row">
            <div class="form-group">
                <label class="col-sm-1 control-label">Show</label>
                <div class="col-sm-1">
                    @Html.DropDownList("PageSize", new SelectList(Model.PageSizeList, "Value", "Text",Model.PageSize),
                        new { onchange = "PageSizeChangefunc(this.value)", @class = "form-control" })
                </div>
            </div>
            @foreach (var item in Model.ProductList)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box" style="height:280px">
                            <div class="product-imitation" id="dropzone">
                                @if (!string.IsNullOrEmpty(item.FileImage))
                                {
                                    <img src="/UploadedImage/@item.FileImage" id="dropzoneimg" alt="">
                                }
                                else
                                {
                                    <img src="/DefaultImage/thumbnail-default.jpg" alt="" id="dropzoneimg" />
                                }
                            </div>
                            <div class="product-desc" style="height:50px">
                                <span class="product-price">
                                    £@item.TotalCost
                                </span>
                                <div class="small m-t-xs" style="text-align:center">
                                    @item.ProductName
                                </div>
                            </div>
                            <div class="product-button">
                                <div class="m-t text-righ">
                                    <a href="#" class="btn btn-xs btn-outline btn-primary" style="margin-left:40px">View <i class="fa fa-long-arrow-right"></i> </a>
                                    <a href="#" class="btn btn-xs btn-outline btn-primary" style="margin-left:20px">Edit <i class="fa fa-long-arrow-right"></i> </a>
                                    <a href="#" class="btn btn-xs  btn btn-danger" style="margin-left:20px">Delete <i class="fa fa-long-arrow-right"></i> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
            <ul class="pagination">
                @if (Model.Page_Number != 1)
                {
                    <li>
                        @Html.ActionLink("Prev", "ProductList", new { Page = Model.Page_Number - 1, pageSize = Model.PageSize })
                        @Html.ActionLink("First", "ProductList", new { Page = 1, pageSize = Model.PageSize })
                    </li>
                }
                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    if (i == Model.Page_Number)
                    {
                        <li class="active">
                            @Html.ActionLink(i.ToString(), "ProductList", new { Page = Model.Page_Number, pageSize= Model.PageSize })
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink(i.ToString(), "ProductList", new { Page = i, pageSize = Model.PageSize })
                        </li>
                    }
                }
                @if (Model.Page_Number != Model.Page_Count)
                {
                    <li>
                        @Html.ActionLink("Next", "ProductList", new { Page = Model.Page_Number + 1, pageSize = Model.PageSize })
                        @Html.ActionLink("Last", "ProductList", new { Page = Model.Page_Count, pageSize = Model.PageSize })
                    </li>
                }
            </ul>
        </div>
    </form>
</div>

<style>
    #dropzone {
        text-align: center;
        padding: 0px 0;
        background-color: #f8f8f9;
        color: #bebec3;
        font-weight: 600;
    }

    #dropzoneimg {
        object-fit: contain;
        width: 100%;
        height: 180px;
        padding: 4px;
        display: block;
    }
</style>

@section scripts{
    <script>     
        function PageSizeChangefunc(pageSize)
        {           
            window.location.href = "/ProductCatalogue/ProductList?pageSize=" + pageSize;         
        }    
    </script>
}



