@model Product_CatalogAndWarehouse_Inventory.Models.SKUMapping

@{
    ViewBag.Title = "SKUMapping";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        @ViewBag.Message
        <a class="alert-link" href="#"></a>
    </div>
    //<span style="color:red @Convert.ToString(ViewBag.color)">@ViewBag.Message</span>
}

<div class="ibox">
    <div class="wrapper wrapper-content animated fadeInRight">

        <div class="ibox-content">

            <div class="row">
                @using (Html.BeginForm("SKUMapping", "SKUMapping", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="col-lg-4">
                        <label class="form-label" for="customFile">Excel File</label>
                        @Html.TextBoxFor(m => m.Fileupload, new { type = "file", @class = "form-control", id = "customFile", Name = "Fileupload" })
                        @Html.ValidationMessageFor(m => m.Fileupload, "", new { @style = "color:red" })
                    </div>
                    <div class="col-lg-2">
                        <label class="form-label"></label>
                        <input class="btn btn-success btn-block" type="submit" value="Upload" />
                    </div>
                    <div class="col-lg-6">
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover dataTables-example" id="mappingSKU">
                        <thead>
                            <tr>

                                <th>WarehouseSKU</th>
                                <th>MappingSKU</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model.MappingList)
                                {
                                    <tr style="cursor:pointer" @*data-toggle="modal" data-target="#partialModal" style="cursor:pointer"*@>

                                        <td onclick=warehouseSKU("@item.idWarehouseSKU")>
                                            @item.WarehouseSKU
                                        </td>
                                        <td onclick=warehouseSKU("@item.idWarehouseSKU")>
                                            @if (item.MappingSKU.Length < 100)
                                            {
                                                @item.MappingSKU
                                            }
                                            else
                                            {
                                                @(item.MappingSKU.Substring(0, 100)+"......");
                                            }
                                        </td>
                                    </tr>

                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="partialModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="ibox-tools">
                    <span id="myModalLabel" style="margin-right:335px;"><font size="+2"><b>MappingSKU List</b></font></span>
                    <a class="close-link" data-dismiss="modal">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="table-responsive">
                            <div class="model-body">
                                <fieldset id="model_form">
                                </fieldset>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


@section scripts{
    <script>

        function warehouseSKU(idWarehouseSKU) {
            //alert(idWarehouse)
            $.ajax({


                url: "/SKUMapping/GetMappingSku?idWarehouseSKU=" + idWarehouseSKU,
                method: 'GET',
                //data: { idWarehouseSKU: warehouseSKU },
                //dataType: 'json',
                //contentType: 'application/json',
                success: function (response) {
                    console.log(response);

                    $("#model_form").html(response);
                    DataModel()
                    $("#partialModal").modal('show');


                }
            });

        }
        //$("#mappingSKU1").on('click', 'tr', function () {

        // var warehouseSKU = $(this).find('td:nth-child(1)').text().trim();
        //console.log(warehouseSKU);

        //$("#partialModal").modal('show');
        //return;


        function DataModel() {
            $('.dataTables-Design').DataTable({
                lengthMenu: [5, 10, 15, 20],
                pageLength: 5,
                responsive: false,
                dom: '<"html5buttons">lTfgitp',
                buttons: [

                    /*{ extend: 'csv' },*/

                    {
                        //extend: 'csv', title: 'MappingList',
                        exportOptions: {
                            columns: [0, 1]
                        },


                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        }


        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                lengthMenu: [25, 50, 75, 100],
                pageLength: 25,
                responsive: false,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [

                    /*{ extend: 'csv' },*/

                    {
                        extend: 'csv', title: 'MappingList',
                        exportOptions: {
                            columns: [0, 1]
                        },


                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });


    </script>


}


