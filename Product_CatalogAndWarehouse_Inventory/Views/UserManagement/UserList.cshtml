@model Product_CatalogAndWarehouse_Inventory.Models.UserModel

@{
    ViewBag.Title = "Userlist";
}

@if (TempData["Message"] != null)
{
    <span style="color:green">@TempData["Message"]</span>
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-users">
                        <thead>
                            <tr>
                                <th>SerialNo</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone_No</th>
                                <th>Gender</th>
                                <th>City</th>
                                <th style="width:100px">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.userList)
                            {
                                <tr>
                                    <td>
                                        @item.SerialNo
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Mobile_No
                                    </td>
                                    <td>
                                        @item.Gender
                                    </td>

                                    <td>
                                        @item.City
                                    </td>
                                    <td>

                                        <button class="btn btn-success btn-xs" style="margin-bottom: 1px;width:59px"
                                                onclick="location.href='@Url.Action("EditUserData", "UserManagement", new {Reg_Id=item.Reg_Id})'">

                                            Edit
                                        </button>


                                        <a href='@Url.Action("DeleteUserData", "UserManagement", new { Reg_Id = item.Reg_Id })'
                                           class="btn btn-danger btn-xs" style="margin-top: 1px; width: 59px"
                                           onclick="return confirm('Are you Sure Want to Delete this Record ?');">
                                            Delete
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('.dataTables-users').DataTable({
                lengthMenu: [5, 10, 15],
                pageLength: 5,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [

                    /*{ extend: 'csv' },*/

                    {
                        extend: 'csv', title: 'userlist',
                        exportOptions: {
                            columns: [0, 1, 2, 3, 4, 5]
                        },


                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });

    </script>

}